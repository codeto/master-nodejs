        <% include ../partials/nmenu %>
            <!-- /.navbar-top-links -->

          
        <% include ../partials/rmenu %>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper" class='box-hadl'>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Post manager</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
<!-- begin -->
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                    <td class='col-sm-1 col-md-1 col-lg-1'>#</td>
                    <td class='col-sm-2 col-md-2 col-lg-2'>Title</td>
                    <td class='col-sm-5 col-md-5 col-lg-5'>Content</td>
                    <td class='col-sm-1 col-md-1 col-lg-1'>Author</td>
                    <td class='col-sm-1 col-md-1 col-lg-1'>Category</td>
                    <td class='col-sm-2 col-md-2 col-lg-2'>#</td>
                </tr>
        </thead>
       <tbody>
            <% for (var i = 0; i < data.length;i++ ){%>
                <tr class='<%= data[i]._id %>'>
                    <td><%= i %></td>
                    <td><%= data[i].title %> <%= data[i].lastname %></td>
                    <td><%= data[i].Content %></td>
                    <td><%= data[i].author %></td>
                    <td><%= data[i].category %></td>
                    <td><a href='http://localhost:3000/admin/edit-post/<%=data[i]._id %>' title='Edit' data-id='<%= data[i]._id %>' data-act='Edit' class='dl-ajax-act' ><span class="glyphicon glyphicon-new-window hadl-span"  aria-hidden="true"></span></a>  
                    <a title='Remove' data-act='Remove-Post' href='javascript:void(0)' data-id='<%= data[i]._id %>' class='dl-ajax-act' ><span class="glyphicon glyphicon-trash hadl-span"  aria-hidden="true"></span></a>  
                    <a data-act='Add' title='Add' href='http://localhost:3000/admin/post/new'><span class="glyphicon glyphicon-plus hadl-span"  aria-hidden="true"></span></a>
                    </td>
                </tr>
                
            <% } %>
        </tbody>
    </table>
    <div class='notice' ></div>
<div class="modal fade adduser" tabindex="-1" role="dialog">
    <center>
        <div class="container hadl-sign-up">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 well well-sm">
                    <legend><a href="http://www.haanhduclinh.com"><i class="glyphicon glyphicon-globe"></i></a> Add a post</legend>
                   <form class='col-sm-12 col-md-12 col-lg-12' method="POST" id='frmpost'>
                        <input class='col-sm-12 col-md-12 col-lg-12 form-control hadl-margin-bot' name='txttitle' type='text' placeholder="Title">
                        <input class=' col-sm-12 col-md-12 col-lg-12 form-control hadl-margin-bot' name='author' type='text' placeholder="Author">
                        <textarea class='col-sm-12 col-md-12 col-lg-12 form-control hadl-margin-bot' rows="5" name='txtcontent'></textarea>
                        <button class='btn btn-lg btn-success btn-block' type="submit">Submit</button>
                        <button type="button" class="btn btn-lg btn-primary btn-block" data-dismiss="modal">Close</button>
                   </form> 
                   
                </div>
            </div>
        </div>
    </center>
</div>
<!-- end fill -->
            </div>
            <!-- /.row -->
        </div>
