            <!-- /.navbar-top-links -->

          
        <% include ../partials/rmenu %>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper" class='box-hadl'>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%if (data && data.title){ %> <%=data.title %> <%}%></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
<!-- begin -->
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
          <%if (data && data.title){ %> <%=data.title %> <%}%>
        </div>
        <!-- /.panel-heading -->
    <form method="POST" id='frmpost-hadl' action="/admin/post/new">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Content</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if (typeof data.post != "undefined"){ %>
                        <tr>
                            <td>Id</td>
                            <td><input class='form-control' type='text' name='txtId' value="<%if (typeof data.post != "undefined"){%><%=data.post._id %><%}%>"></td>
                        </tr>
                        <%}%>
                        <tr>
                            <td>Title</td>
                            <td><input class='form-control' type='text' name='txtTitle' value="<%if (typeof data.post != "undefined"){%><%=data.post.title %><%}%>"></td>
                        </tr>
                        <tr>
                            <td>Author</td>
                            <td><input class='form-control' type='text' name='txtAuthor' value="<%if (typeof data.post != "undefined"){%><%=data.post.author %><%}%>"></td>
                        </tr>
                        <tr>
                            <td>Content</td>
                            <td><textarea class='form-control' cols="3" rows="5" name='txtContent' ><%if (typeof data.post != "undefined"){%><%=data.post.Content %><%}%></textarea></td>
                        </tr>
                        <tr>
                            <td>Categories</td>
                            <td><input class='form-control' type='text' name='txtCategories' value="<%if (typeof data.post != "undefined"){%><%=data.post.category %> <%}%>"></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                             <% if( data && data.title == 'Add new post') {%>
                             <input class='btn btn-success' type='submit' value="Submit new post">
                        <%} else if (data && data.title == 'Edit post' || data.title == 'Update success.' ){%>
                        <input class='btn btn-success' type='submit' value="Update">
                        <%}%>
                        <span id='notification'></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    </form>
    <!-- /.panel -->
</div>
<!-- end fill -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
<% include ../partials/footera %>
<%if (typeof data.post != "undefined" || data.title == 'Update success.'){ %>
<script type="text/javascript">
    $("#frmpost-hadl").submit(function(e){
        e.preventDefault();
        var base_url = location.protocol + "//" + document.domain + ":" + location.port + "/";
        var url = base_url + "admin/post/edit";
        var data = $(this).serialize();
        $.ajax({
            url:url,
            data:data,
            type:"PUT",
            dataType:"JSON",
            success:(function(res){
                if(res.kq == '1') $('#notification').html("<div class='alert alert-success'><a href='#' class='close' data-dismiss='alert' aria-label='close'>&times;</a><strong>Success!</strong> Update success! </div>");
                else $('#notification').html("<div class='alert alert-danger'><a href='#' class='close' data-dismiss='alert' aria-label='close'>&times;</a><strong>Danger!</strong> Something wrong</div>");
            })
        });
    });
</script>

<%}%>