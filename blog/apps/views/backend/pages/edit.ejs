<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Post Edit
        </div>
        <!-- /.panel-heading -->
    <form method="POST" id='frmpost-hadl'>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Content</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Id</td>
                            <td><input class='form-control' type='text' name='txtId' value="<%if (data && data.post.title){ %> <%=data.post._id%> <%}%>"></td>
                        </tr>
                        <tr>
                            <td>Title</td>
                            <td><input class='form-control' type='text' name='txtTitle' value="<%if (data && data.post.title){ %> <%=data.post.title%> <%}%>"></td>
                        </tr>
                        <tr>
                            <td>Author</td>
                            <td><input class='form-control' type='text' name='txtAuthor' value="<%if (data && data.post.author){ %> <%=data.post.author%> <%}%>"></td>
                        </tr>
                        <tr>
                            <td>Content</td>
                            <td><textarea class='form-control' cols="3" rows="5" name='txtContent' ><%if (data && data.post.Content){ %> <%=data.post.Content%> <%}%></textarea></td>
                        </tr>
                        <tr>
                            <td>Categories</td>
                            <td><input class='form-control' type='text' name='txtCategories' value="<%if (data && data.post.category){ %> <%=data.post.category%> <%}%>"></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input class='btn btn-success' type='submit' value="Update"></td>
                        </tr>
                    </tbody>
                </table>
